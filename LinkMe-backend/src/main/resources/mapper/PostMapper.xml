<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linkme.backend.module.post.mapper.PostMapper">

  <resultMap id="BaseResultMap" type="com.linkme.backend.module.post.entity.Post">
    <id column="id" property="id"/>
    <result column="user_id" property="userId"/>
    <result column="content" property="content"/>
    <result column="created_at" property="createdAt"/>
  </resultMap>

  <select id="findById" resultMap="BaseResultMap" parameterType="int">
    SELECT * FROM post WHERE id = #{id}
  </select>

  <select id="findByUserId" resultMap="BaseResultMap" parameterType="int">
    SELECT * FROM post WHERE user_id = #{userId} ORDER BY created_at DESC
  </select>

  <select id="search" resultMap="BaseResultMap">
    SELECT * FROM post
    <where>
      <if test="keyword != null and keyword != ''">
        content LIKE CONCAT('%', #{keyword}, '%')
      </if>
    </where>
    ORDER BY created_at DESC
    LIMIT #{limit} OFFSET #{offset}
  </select>

  <insert id="insert" parameterType="com.linkme.backend.module.post.entity.Post" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO post (user_id, content, created_at)
    VALUES (#{userId}, #{content}, NOW())
  </insert>

</mapper>
